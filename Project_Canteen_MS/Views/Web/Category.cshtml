@model List<Project_Canteen_MS.Models.Product>
@{
    var cate = (Project_Canteen_MS.Models.Category)ViewBag.Category;
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_WebPage.cshtml";
}
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>@cate.Name</h1>
            </div>
        </div>
    </div>
</div>
<div class="menu-box">
    <div class="container">
        <div class="row inner-menu-box">
            <div class="col-12">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-4 special-grid drinks">
                                    <div class="gallery-single fix ">
                                        <img src="@Url.Content(item.Image)" class="img-fluid" alt="Image">
                                        <div class="why-text">
                                            <h1>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</h1>
                                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                            @if (item.PromotionPrice >= 1)
                                            {
                                                <div style="display: flex; position: absolute; bottom: 0;width:100% ">
                                                    <div class="col-9" style="display:flex">
                                                        <h5><del>₫@Html.DisplayFor(modelItem => item.Price)</del></h5>
                                                        <h5>&nbsp;-&nbsp;</h5>
                                                        <h5>₫@Html.DisplayFor(modelItem => item.PromotionPrice)</h5>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <a href="#" style="float:right;margin-top:-5px"><i class="fa fa-cart-plus" style="font-size:22px" aria-hidden="true"></i></a>

                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div style="display:flex;position:absolute;bottom:0">
                                                    <h5> ₫@Html.DisplayFor(modelItem => item.Price)</h5>
                                                    <a href="#" style="float:right"><i class="fa fa-cart-plus" aria-hidden="true"></i></a>

                                                </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>