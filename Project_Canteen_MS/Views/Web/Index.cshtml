@model dynamic
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_WebPage.cshtml";
    //Project_Canteen_MS.Models.Slide slide = Model.Slide;
}

<!-- Start slides -->
<div id="slides" class="cover-slides">
    <ul class="slides-container">
        @foreach (Project_Canteen_MS.Models.Slide item in Model.Slides)
        {
            <li class="text-left">
                <img src="@Url.Content(item.Image)" />

                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="m-b-20"><strong>Welcome To <br> @Html.DisplayFor(modelItem => item.Title)</strong></h1>
                            <p class="m-b-40">
                                @Html.DisplayFor(modelItem => item.Content)
                            </p>
                            <p><a class="btn btn-lg btn-circle btn-outline-new-white" href="#">Reservation</a></p>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div class="slides-navigation">
        <a href="#" class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        <a href="#" class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
    </div>
</div>
<!-- End slides -->
<!-- Start Gallery -->
<div class="gallery-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Gallery</h2>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting</p>
                </div>
            </div>
        </div>
        <div class="tz-gallery" >
            <div class="row">
                @foreach (Project_Canteen_MS.Models.Product item in Model.Products)
                {
                    <div class="col-sm-6 col-md-4 col-lg-4 special-grid drinks">
                        <div class="gallery-single fix">
                            <img src="@Url.Content(item.Image)" class="img-fluid" alt="Image">
                            <div class="why-text">
                                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                <div style="display:flex;position:absolute;bottom:0">
                                    <h5><del> @Html.DisplayFor(modelItem => item.Price)&nbsp;VNĐ</del></h5>
                                    <h5>&nbsp;-&nbsp;</h5>
                                    <h5>@Html.DisplayFor(modelItem => item.PromotionPrice)&nbsp;VNĐ</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End Gallery -->
